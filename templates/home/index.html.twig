{% extends 'base.html.twig' %}

{% block title %}Bienvenue à Delicatessen
{% endblock %}

{% block body %}
	{% for message in app.flashes('notice') %}
		<div class="flash-notice">
			{{ message }}
		</div>
	{% endfor %}
	<div class="container">
		<div class="row align-items-start">
			{% for product in products %}
				<div class="card col-3">
					<img class="card-img-top" src="{{product.image}}" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">{{product.name}}</h5>
						<p class="card-text">{{product.description}}</p>
						<p class="card-text">{{product.price}}€</p>

						<form id="form-product" action="{{ path('cart_add') }}" method="">
							<input type="number" class="quantity-product" id="" name="quantity" min="1" max="100" style="width: 50px;">
							<input type="hidden" id="product" name="product" value="{{ product.id }}">
							<input type="submit" product="{{ product.id }}" class="btn-add-product btn btn-success" value="Ajouter">
						</form>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
